@model ManagementSoftware.Models.ClientOrder
@{
    ViewData["Title"] = "Delete Client Order";
}

<div class="container mt-4">
    <h2>Delete Client Order</h2>
    <h5>Are you sure you want to delete this order?</h5>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Client Name</dt>
            <dd class="col-sm-10">@Model.ClientName</dd>
            <dt class="col-sm-2">Item</dt>
            <dd class="col-sm-10">@Model.ItemName</dd>
            <dt class="col-sm-2">Quantity</dt>
            <dd class="col-sm-10">@Model.Quantity</dd>
        </dl>
        <form asp-action="ClientOrderDelete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="ClientOrder" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
