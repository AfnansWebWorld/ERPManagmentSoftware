@model IEnumerable<ManagementSoftware.Models.PhysicalStock>
@{
    ViewData["Title"] = "PhysicalStock";
}

<h2 class="mb-4">PhysicalStock</h2>

<div class="mb-3">
    <form method="get" asp-action="PhysicalStock">
        <div class="row g-2 align-items-end">
            <div class="col-md-3">
                <label>Date From</label>
                <input type="date" name="dateFrom" class="form-control" />
            </div>
            <div class="col-md-3">
                <label>Date To</label>
                <input type="date" name="dateTo" class="form-control" />
            </div>
            <div class="col-md-3">
                <label>Search by Account</label>
                <input type="text" name="search" class="form-control" placeholder="Account Name" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">Filter</button>
            </div>
        </div>
    </form>
</div>

<p>
    <a asp-action="PhysicalStockCreate" class="btn btn-success">Create New</a>
    <a href="/Export/PhysicalStockToExcel" class="btn btn-outline-secondary">Export to Excel</a>
</p>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Item Name</th>
            <th>Quantity</th>
            <th>Date</th>
 
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.Quantity</td>
                <td>@item.Date.ToShortDateString()</td>
         
                
                <td>
                    <a asp-action="PhysicalStockEdit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="PhysicalStockDetails" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="PhysicalStockDelete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>