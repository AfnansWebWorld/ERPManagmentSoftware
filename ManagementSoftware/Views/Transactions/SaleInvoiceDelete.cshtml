@model ManagementSoftware.Models.SaleInvoice

@{
    ViewData["Title"] = "Delete Sale Invoice";
}

<h2>Delete Sale Invoice</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this invoice?
</div>

<dl class="row">
    <dt class="col-sm-3">Client Name</dt>
    <dd class="col-sm-9">@Model.ClientName</dd>
    <dt class="col-sm-3">Invoice Date</dt>
    <dd class="col-sm-9">@Model.InvoiceDate.ToShortDateString()</dd>
    <dt class="col-sm-3">Total Amount</dt>
    <dd class="col-sm-9">@Model.TotalAmount</dd>
</dl>

<form asp-action="SaleInvoiceDeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="SaleInvoiceIndex" class="btn btn-secondary">Cancel</a>
</form>
