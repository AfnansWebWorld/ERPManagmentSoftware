@model DeliveryChallan
@{
    ViewData["Title"] = "Delete Delivery Challan";
}

<h2>Are you sure you want to delete this?</h2>

<div class="mb-3">
    <strong>Client Name:</strong> @Model.ClientName
</div>
<div class="mb-3">
    <strong>Delivery Date:</strong> @Model.DeliveryDate.ToShortDateString()
</div>
<div class="mb-3">
    <strong>Description:</strong> @Model.Description
</div>

<form asp-action="DeliveryChallanDelete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="DeliveryChallan" class="btn btn-secondary">Cancel</a>
</form>
