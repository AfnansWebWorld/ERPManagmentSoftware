@model IEnumerable<ManagementSoftware.Models.ClientOrder>
@{
    ViewData["Title"] = "Client Orders";
}

<div class="container mt-4">
    <h2>Client Orders</h2>
    <a asp-action="ClientOrderCreate" class="btn btn-primary mb-3">+ New Order</a>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Client Name</th>
                <th>Order Date</th>
                <th>Item Name</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.ClientName</td>
                    <td>@order.OrderDate.ToShortDateString()</td>
                    <td>@order.ItemName</td>
                    <td>@order.Quantity</td>
                    <td>
                        <a asp-action="ClientOrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="ClientOrderEdit" asp-route-id="@order.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="ClientOrderDelete" asp-route-id="@order.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
