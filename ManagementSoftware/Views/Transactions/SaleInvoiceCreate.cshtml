@model ManagementSoftware.Models.SaleInvoice

@{
    ViewData["Title"] = "Create Sale Invoice";
}

<h2>Create Sale Invoice</h2>

<form asp-action="SaleInvoiceCreate" method="post">
    <div class="mb-3">
        <label asp-for="ClientName" class="form-label"></label>
        <input asp-for="ClientName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="InvoiceDate" class="form-label"></label>
        <input asp-for="InvoiceDate" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="TotalAmount" class="form-label"></label>
        <input asp-for="TotalAmount" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="SaleInvoiceIndex" class="btn btn-secondary">Cancel</a>
</form>
