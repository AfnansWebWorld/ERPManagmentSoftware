@model PhysicalStock
@{
    ViewData["Title"] = "Delete Physical Stock";
}

<h2 class="mb-4">Confirm Delete</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this record?</strong>
</div>

<dl class="row">
    <dt class="col-sm-3">Item Name</dt>
    <dd class="col-sm-9">@Model.ItemName</dd>

    <dt class="col-sm-3">Quantity</dt>
    <dd class="col-sm-9">@Model.Quantity</dd>

    <dt class="col-sm-3">Date</dt>
    <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>
</dl>

<form asp-action="PhysicalStockDelete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="PhysicalStock" class="btn btn-secondary ms-2">Cancel</a>
</form>
