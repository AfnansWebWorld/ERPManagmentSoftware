@model IEnumerable<ManagementSoftware.Models.Recipe>
@{
    ViewData["Title"] = "Recipe";
}

<h2 class="mb-4">Recipe</h2>

<div class="mb-3">
    <form method="get" asp-action="Recipe">
        <div class="row g-2 align-items-end">
            <div class="col-md-3">
                <label>Date From</label>
                <input type="date" name="dateFrom" class="form-control" />
            </div>
            <div class="col-md-3">
                <label>Date To</label>
                <input type="date" name="dateTo" class="form-control" />
            </div>
            <div class="col-md-3">
                <label>Search by Account</label>
                <input type="text" name="search" class="form-control" placeholder="Account Name" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">Filter</button>
            </div>
        </div>
    </form>
</div>

<p>
    <a asp-action="RecipeCreate" class="btn btn-success">Create New</a>
    <a href="/Export/RecipeToExcel" class="btn btn-outline-secondary">Export to Excel</a>
</p>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Product Name</th>
            <th>Ingredient</th>
            <th>Quantity</th>
     
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Ingredient</td>
                <td>@item.Quantity</td>
                
                <td>
                    <a asp-action="RecipeDetails" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="RecipeEdit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="RecipeDelete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>