@model ManagementSoftware.Models.ProductionOrder

@{
    ViewData["Title"] = "Delete Production Order";
}

<h2>Confirm Delete</h2>
<p>Are you sure you want to delete this order?</p>

<dl class="row">
    <dt class="col-sm-2">Product</dt>
    <dd class="col-sm-10">@Model.ProductName</dd>

    <dt class="col-sm-2">Order Date</dt>
    <dd class="col-sm-10">@Model.OrderDate.ToShortDateString()</dd>

    <dt class="col-sm-2">Quantity</dt>
    <dd class="col-sm-10">@Model.Quantity</dd>
</dl>

<form asp-action="ProductionOrderDelete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ProductionOrder" class="btn btn-secondary">Cancel</a>
</form>
