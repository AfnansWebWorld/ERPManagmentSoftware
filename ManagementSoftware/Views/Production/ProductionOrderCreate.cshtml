@model ManagementSoftware.Models.ProductionOrder

@{
    ViewData["Title"] = "Create Production Order";
}

<div class="main-content">
    <h2>Create Production Order</h2>

    <form asp-action="ProductionOrderCreate" method="post">
        <div class="mb-3">
            <label asp-for="ProductName" class="form-label"></label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="OrderDate" class="form-label"></label>
            <input asp-for="OrderDate" type="date" class="form-control" />
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="ProductionOrder" class="btn btn-secondary">Cancel</a>
    </form>
</div>
