@model ManagementSoftware.Models.ReceivedFromProduction
@{
    ViewData["Title"] = "Create Received From Production";
}

<div class="container-fluid px-4">
    <h2 class="mt-4">Create Received From Production</h2>
    <form asp-action="ReceivedFromProductionCreate" method="post">
        <div class="mb-3">
            <label asp-for="ProductName" class="form-label"></label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ReceivedDate" class="form-label"></label>
            <input asp-for="ReceivedDate" type="date" class="form-control" />
            <span asp-validation-for="ReceivedDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="ReceivedFromProduction" class="btn btn-secondary">Cancel</a>
    </form>
</div>
