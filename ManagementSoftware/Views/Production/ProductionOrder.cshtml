@model IEnumerable<ManagementSoftware.Models.ProductionOrder>

@{
    ViewData["Title"] = "Production Orders";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Production Orders</h3>
        <a asp-action="ProductionOrderCreate" class="btn btn-primary">+ New Order</a>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Product Name</th>
                <th>Order Date</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.OrderDate.ToShortDateString()</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a asp-action="ProductionOrderDetails" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="ProductionOrderEdit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="ProductionOrderDelete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
