@model ManagementSoftware.Models.Recipe
@{
    ViewData["Title"] = "Edit Recipe";
}

<div class="container mt-4">
    <h2>Edit Recipe</h2>
    <form asp-action="RecipeEdit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="ProductName" class="form-label"></label>
            <input asp-for="ProductName" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Ingredient" class="form-label"></label>
            <input asp-for="Ingredient" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Recipe" class="btn btn-secondary">Cancel</a>
    </form>
</div>
