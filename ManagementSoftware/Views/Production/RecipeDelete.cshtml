@model ManagementSoftware.Models.Recipe
@{
    ViewData["Title"] = "Delete Recipe";
}

<div class="container mt-4">
    <h2>Delete Confirmation</h2>
    <div class="alert alert-danger">Are you sure you want to delete this recipe?</div>
    <form asp-action="RecipeDelete" method="post">
        <input type="hidden" asp-for="Id" />
        <dl class="row">
            <dt class="col-sm-3">Product Name</dt>
            <dd class="col-sm-9">@Model.ProductName</dd>

            <dt class="col-sm-3">Ingredient</dt>
            <dd class="col-sm-9">@Model.Ingredient</dd>

            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>
        </dl>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Recipe" class="btn btn-secondary">Cancel</a>
    </form>
</div>
