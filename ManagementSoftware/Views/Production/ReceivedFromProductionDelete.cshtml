@model ManagementSoftware.Models.ReceivedFromProduction
@{
    ViewData["Title"] = "Delete Received From Production";
}

<div class="container-fluid px-4">
    <h2 class="mt-4">Are you sure you want to delete this?</h2>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Product Name</dt>
                <dd class="col-sm-9">@Model.ProductName</dd>

                <dt class="col-sm-3">Quantity</dt>
                <dd class="col-sm-9">@Model.Quantity</dd>

                <dt class="col-sm-3">Received Date</dt>
                <dd class="col-sm-9">@Model.ReceivedDate.ToShortDateString()</dd>
            </dl>
        </div>
    </div>

    <form asp-action="ReceivedFromProductionDelete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ReceivedFromProduction" class="btn btn-secondary">Cancel</a>
    </form>
</div>
