@model ManagementSoftware.Models.ProductionOrder

@{
    ViewData["Title"] = "Edit Production Order";
}

<h2>Edit Production Order</h2>

<form asp-action="ProductionOrderEdit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OrderDate"></label>
        <input asp-for="OrderDate" type="date" class="form-control" />
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="ProductionOrderIndex" class="btn btn-secondary">Cancel</a>
</form>
